{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy to GitHub",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/deploy.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Quick Deploy (Auto Commit)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "git add .; git commit -m 'Update portfolio: ${input:commitMessage}'; git push origin main"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message",
      "default": "Update portfolio"
    }
  ]
}

